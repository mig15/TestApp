<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

    <ImageView
            android:id="@+id/iv_author_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/tv_author_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_author_avatar"
            app:layout_constraintStart_toEndOf="@id/iv_author_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_author_avatar"
            android:layout_marginStart="10dp"
            android:text="Author Name"
            android:textSize="18sp"
            android:textColor="@color/colorBlack" />

    <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_author_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite">

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Оглавление поста"
                android:textSize="18sp"
                android:textColor="@color/colorBlack" />

        <TextView
                android:id="@+id/tv_image_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:text="Заголовок 1"
                android:textSize="18sp"
                android:textColor="@color/colorBlack" />

        <ImageView
                android:id="@+id/iv1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/tv_image_title1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp" />

        <ImageView
                android:id="@+id/iv2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/iv1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv3"
                android:layout_marginTop="10dp" />

        <TextView
                android:id="@+id/tv_image_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv2"
                app:layout_constraintStart_toStartOf="@id/iv2"
                app:layout_constraintEnd_toEndOf="@id/iv2"
                android:layout_marginTop="10dp"
                android:text="Заголовок 2"
                android:textSize="18sp"
                android:textColor="@color/colorBlack" />

        <ImageView
                android:id="@+id/iv3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/iv1"
                app:layout_constraintStart_toEndOf="@id/iv2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp" />

        <TextView
                android:id="@+id/tv_image_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv3"
                app:layout_constraintStart_toStartOf="@id/iv3"
                app:layout_constraintEnd_toEndOf="@id/iv3"
                android:layout_marginTop="10dp"
                android:text="Заголовок 3"
                android:textSize="18sp"
                android:textColor="@color/colorBlack" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>